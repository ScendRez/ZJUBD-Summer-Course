<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="@id/btn_toast"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="64px"/>

    <Button
        android:id="@+id/btn_toast"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="TOAST!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_rv"
        android:textAllCaps="false"  />

    <Button
        android:id="@+id/btn_rv"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Go to RecyclerView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_practice"
        android:textAllCaps="false"  />

    <Button
        android:id="@+id/btn_practice"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Go to PracticeActivity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_baidu"
        android:textAllCaps="false"  />

    <Button
        android:id="@+id/btn_baidu"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Go to www.baidu.com"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_dial"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_dial"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="Go to Dial"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:textAllCaps="false" />

</androidx.constraintlayout.widget.ConstraintLayout>